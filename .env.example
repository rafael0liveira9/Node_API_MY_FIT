# Database Configuration
# MySQL connection string format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://your_username:your_password@your_host:3306/your_database"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT/Authentication Configuration
# IMPORTANT: Change this to a strong random secret in production!
# You can generate one with: openssl rand -base64 32
SECRET_CLIENT_KEY=your-secret-key-here-change-in-production

# AWS S3 Configuration (for file/image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-2
S3_BUCKET_NAME=your-bucket-name
